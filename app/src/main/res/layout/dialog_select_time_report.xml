<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_primary"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextViewDefaultSingleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_normal"
            android:gravity="center_horizontal"
            android:text="@string/time_param"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_medium_small" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_no_border_no_radius_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_medium_small"
            android:paddingLeft="@dimen/margin_medium_small"
            android:paddingTop="@dimen/margin_medium_small"
            android:paddingEnd="@dimen/margin_normal_small"
            android:paddingRight="@dimen/margin_normal_small"
            android:paddingBottom="@dimen/margin_medium_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/tvStartDate"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="end"
                android:textColor="@color/color_text_main"
                android:textSize="@dimen/font_size_normal" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                app:srcCompat="@drawable/ic_chevron_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dip"
            android:background="@color/divider_color" />

        <LinearLayout
            android:id="@+id/llEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_no_border_no_radius_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_medium_small"
            android:paddingLeft="@dimen/margin_medium_small"
            android:paddingTop="@dimen/margin_medium_small"
            android:paddingEnd="@dimen/margin_normal_small"
            android:paddingRight="@dimen/margin_normal_small"
            android:paddingBottom="@dimen/margin_medium_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_date"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/tvEndDate"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="end"
                android:textColor="@color/color_text_main"
                android:textSize="@dimen/font_size_normal" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                app:srcCompat="@drawable/ic_chevron_right" />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/view_button_dialog" />

</LinearLayout>
