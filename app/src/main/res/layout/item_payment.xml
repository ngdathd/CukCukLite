<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7.0">

        <TextView
            android:id="@+id/tvInventoryItemName"
            style="@style/TextViewDetailBill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.4"
            android:gravity="start"
            android:paddingStart="@dimen/margin_normal_small"
            android:paddingLeft="@dimen/margin_normal_small"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tvQuantity"
            style="@style/TextViewDetailBill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8" />

        <TextView
            android:id="@id/tvUnitPrice"
            style="@style/TextViewDetailBill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="end" />

        <TextView
            style="@style/TextViewTitleTableBill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <TextView
            android:id="@+id/tvAmount"
            style="@style/TextViewDetailBill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.1"
            android:gravity="end"
            android:paddingEnd="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_normal"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.100000024dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/color_divider" />
</LinearLayout>