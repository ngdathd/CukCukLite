<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/lnContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_no_border_no_radius_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTypeReport"
            style="@style/TextViewDefault"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_weight="1.0"
            android:alpha="0.8"
            android:textSize="@dimen/font_size_medium_small" />

        <ImageView
            android:id="@+id/ivCheck"
            android:layout_width="16.0dip"
            android:layout_height="16.0dip"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:contentDescription="@string/img_content_description"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_check_filter"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnBottom"
        android:layout_width="match_parent"
        android:layout_height="0.30000007dip"
        android:background="@color/color_divider"
        android:orientation="horizontal" />

</LinearLayout>
