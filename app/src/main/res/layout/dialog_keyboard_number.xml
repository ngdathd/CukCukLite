<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include layout="@layout/view_title_dialog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etResult"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_keyboard"
                    android:layout_margin="@dimen/margin_keyboard"
                    android:background="@drawable/bg_white_with_border_and_radius"
                    android:gravity="center|end"
                    android:inputType="number"
                    android:maxLength="14"
                    android:paddingLeft="@dimen/margin_normal_small"
                    android:paddingRight="@dimen/margin_normal_small"
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/size_edittext_keyboard"
                    android:textStyle="bold"
                    tools:ignore="Autofill,LabelFor,TextFields">

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/ivDelete"
                    style="@style/TextViewNumberDark"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_keyboard"
                    android:layout_margin="@dimen/margin_keyboard"
                    android:contentDescription="@string/img_content_description"
                    app:srcCompat="@drawable/ic_backspace_red" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvReduce"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/str_minus"
                android:textSize="@dimen/font_size_normal"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvIncrease"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_marginEnd="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/str_plus"
                android:textSize="@dimen/font_size_normal"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvClear"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/keyClear"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <TextView
                android:id="@+id/tvSeven"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key7"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvEight"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key8"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvNine"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_marginEnd="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key9"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <TextView
                android:id="@+id/tvFour"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key4"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvFive"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key5"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvSix"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_marginEnd="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key6"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <TextView
                android:id="@+id/tvOne"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key1"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvTwo"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key2"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvThree"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_marginEnd="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key3"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_number_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/tvZero"
                    style="@style/TextViewNumberDark"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_keyboard"
                    android:layout_margin="@dimen/margin_keyboard"
                    android:gravity="center"
                    android:paddingTop="@dimen/padding_dialog_key_10"
                    android:paddingBottom="@dimen/padding_dialog_key_10"
                    android:text="@string/key0"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvFinish"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_keyboard"
                    android:layout_margin="@dimen/margin_keyboard"
                    android:layout_marginEnd="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:background="@drawable/bg_primary_no_border_with_radius_selector"
                    android:gravity="center"
                    android:text="@string/btn_done"
                    android:textColor="@color/color_white"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>