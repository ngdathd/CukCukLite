<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewDefaultSingleLine" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/color_text_main</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextButtonDefault" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
    </style>

    <style name="TextTitlePage">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TextActionTitlePage">
        <item name="android:textSize">@dimen/font_size_medium_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TextViewNumberDark" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/btn_payment_fragment_10</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff212121</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_gray_with_border_radius_selector</item>
        <item name="android:paddingTop">@dimen/padding_top_textview_number_dark</item>
        <item name="android:paddingBottom">@dimen/padding_top_textview_number_dark</item>
    </style>

    <style name="TextViewNumberDarkPayment" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/font_size_large_small</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_key_selector</item>
        <item name="android:layout_margin">@dimen/margin_normal_small</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/bg_primary_no_border_with_radius_selector</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonDefaultActionBar">
        <item name="android:textSize">@dimen/font_size_medium_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bg_action_bar_selector</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextViewDefault">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/color_text_main</item>
    </style>

    <style name="TextViewDefaultBoldSingleLine" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text_main</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextViewTitleTableBill" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/font_size_medium_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/margin_normal</item>
        <item name="android:paddingBottom">@dimen/margin_normal</item>
    </style>

    <style name="DialogNegativeButtonStyle">
        <item name="android:textColor">@drawable/selector_negative_btn_text_color</item>
        <item name="android:background">@drawable/selector_btn_negative</item>
        <item name="android:paddingLeft">@dimen/margin_large_small</item>
        <item name="android:paddingTop">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_large_small</item>
        <item name="android:paddingBottom">@dimen/margin_normal</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="DialogPositiveButtonStyle">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:background">@drawable/selector_btn_positive</item>
        <item name="android:paddingLeft">@dimen/margin_large_small</item>
        <item name="android:paddingTop">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_large_small</item>
        <item name="android:paddingBottom">@dimen/margin_normal</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="FontButton">
        <item name="android:textSize">@dimen/font_button</item>
    </style>

    <style name="TextViewDefaultBold">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text_main</item>
    </style>

    <style name="BaseTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemCalculatorTextView" parent="BaseTextView">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:background">@drawable/bg_border_radius_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:layout_height">@dimen/height_large</item>
    </style>

    <style name="TitleCalculatorTextView" parent="BaseTextView">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="CloseCalculatorTextView" parent="BaseTextView">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TextViewDetailBill" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ff494949</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/margin_normal</item>
        <item name="android:paddingBottom">@dimen/margin_normal</item>
    </style>

    <style name="BaseEditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ResultCalculatorEditText" parent="BaseEditText">
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
        <item name="android:background">@drawable/background_border_calculator_result</item>
        <item name="android:layout_height">@dimen/height_large</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:inputType">number</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
    </style>

    <style name="ItemTypeReportTextView" parent="BaseTextView">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="TitleTypeReportTextView" parent="BaseTextView">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:background">@color/colorBlue</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="ContentSelectTimeReportTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
        <item name="android:drawableEnd">@drawable/ic_chevron_right</item>
    </style>

    <style name="TitleSelectTimeReportTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
    </style>

    <style name="TitleLogoSaleTextView" parent="BaseTextView">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>

    <style name="ClickSaleTextView" parent="BaseTextView">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/colorBlueDark</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_normal_large</item>
    </style>

    <style name="TextViewTitleWhite" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextViewNormal" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextDarkGray</item>
    </style>

    <style name="TextViewNormalWhite" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
